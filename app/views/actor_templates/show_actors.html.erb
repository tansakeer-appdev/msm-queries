<h1>
  Actor #<%= @the_act.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%= @the_act.id %>" class="btn btn-block btn-outline-secondary">
  Delete Actor
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_act.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_act.dob %>

  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_act.bio %>

  </dd>


  <dt>
    Image
  </dt>
  <dd>
    <img src="http://robohash.org/<%= @the_act.image %>" >  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_act.created_at) %> ago</dd>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_act.updated_at) %> ago</dd>
  </dd>
</dl>

<h2>Filmography</h2>
<% the_char = Character.where({ :actor_id => @the_act.id }) %>

<% the_char.each do |a_ch| %>

   <% the_mov = Movie.where({ :id => a_ch.movie_id }).at(0) %>

        <table border="1"> 
        <tr>   
         <td>
      <%= the_mov.title %>
    </td>
    <td>
      <%= the_mov.year %>
    </td>

      <% the_director = Director.where({ :id => the_mov.director_id }).at(0) %>

    <td> 
      <%= the_director.name %>
    </td>

    <td> 
      <%= a_ch.name %>
    </td>

    <td>
      <a href="/movies/<%= a_ch.movie_id %>">
      Show Details
      </a>
    </td>
     </tr>

 <% end %>
</table>
